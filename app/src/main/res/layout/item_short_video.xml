<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_imageView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@android:drawable/ic_lock_lock" />

    <TextView
        android:id="@+id/tv_collectNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/iv_imageView_main"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="2345" />
    <TextView
        android:id="@+id/tv_TextView_Description"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/iv_imageView_main"
        android:layout_marginLeft="4dp"
        android:layout_alignParentLeft="true"
        android:text="灭火器原型"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_imageView_second"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/iv_imageView_main"
        android:layout_toLeftOf="@id/tv_collectNum"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_collcet_no_small" />

</RelativeLayout>
